<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/test_et"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/test_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/test_et"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_launcher_background"
        android:text="测试"
        android:textColor="@color/white"></Button>

    <Button
        android:id="@+id/test_btn1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/test_btn"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_launcher_background"
        android:text="测试"
        android:textColor="@color/white"></Button>

    <com.insightsurfface.stylelibrary.keyboard.English9KeyBoardView
        android:id="@+id/keyboard_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></com.insightsurfface.stylelibrary.keyboard.English9KeyBoardView>
</RelativeLayout>